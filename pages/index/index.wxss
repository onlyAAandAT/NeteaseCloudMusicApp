.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
  border-radius: 15px;
  transform: scale(0.75);
}
/* 导航区 */
.navContainer{
  display: flex;
  justify-content: center;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 18%;
}

.navItem .iconfont{
  width: 100rpx;
  width: 100rpx;
  font-size: 50rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: #58928a;
  color: #fff;
  margin: 10rpx 0;
}

.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 20rpx;
}

/* 内容区样式 */
.recommendScroll{
  display: flex;
  height: 300rpx;
}

.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本隐藏
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /*设置对齐模式*/
  -webkit-box-orient: vertical; 
  /* 设置行数显示 */
  -webkit-line-clamp: 2;
}
/* 排行榜 */
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 430rpx;
}
.swiperItem{
  width: 96%;
  background-color: #fafafa;
}
.topListSwiper .title{
  font-size: 30rpx;
  line-height: 80rpx;
  
}
.musicItem{
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
