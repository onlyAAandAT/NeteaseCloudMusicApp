.searchContainer{
  padding: 0 20rpx;
}
.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchInput{
  position: relative;
  flex:1;
  background-color: rgba(237, 237, 237, .3);
  border-radius: 30rpx;
}
.cancel{
  width: 100rpx;
  text-align: center;
}
.searchInput input{
  margin-left: 50rpx;
  height: 60rpx;
}
.searchIcon{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 15rpx;
  top: 15rpx;
}
.placeholder{
  color: #3e6365;
  font-size: 28rpx;
}
/* 热搜榜 */
.hotContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.order{
  margin: 0 10rpx;
}
.hotItem .icon{
  width: 35rpx;
  height: 20rpx;
  margin-left: 20rpx;
}

.searchContent{
  color: #3e6365;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #3e6365;
}
.searchItem{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  
}
.searchItem .searchIcon2{
  width: 35rpx;
  height: 35rpx;
  margin-top: 25rpx;
}
.searchItem .content{
  flex: 1;
  margin-left: 20rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #3e63653a;
}

/* 搜索历史 */
.history{
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #ededed;
  position: relative;
}
.history .title{
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .historyItem{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  border-radius: 20rpx;
  margin-left: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 10rpx;
}
.delete{
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  position:absolute;
  bottom: 10rpx;
  right: 15rpx;
  color: #3e6365;
}
.clear{
  position: absolute;
  right: 30rpx;
  top: 0;
  z-index: 100;
  font-size: 30rpx;
}